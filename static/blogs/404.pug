doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    //- script(src='https://cdn.tailwindcss.com')
    link(rel='stylesheet', href='../css/tailwind.css')
    link(rel='shortcut icon', href='./images/404.png', type='image/x-icon')
    title 404 - Page Not Found
  body.bg-red-300
    h1.text-center.font-mono.text-2xl.font-extrabold(class='mt-[16.25rem] lg:text-3xl') #{title}
    a.inline-block.bg-green-500.px-5.rounded-lg.shadow-lg.font-mono.text-2xl.py-1(href=routes, class='mt-[5.25rem] ml-[6.25rem] lg:ml-[38rem]') #{exit}