doctype html
meta(charset='UTF-8')
meta(http-equiv='X-UA-Compatible' content='IE=edge')
meta(name='viewport' content='width=device-width, initial-scale=1.0')
title #{title}
// tailwind css link
link(rel='stylesheet' href='../../css/base.css')
link(rel='stylesheet' href='../../css/tailwind.css')
//- script(src='https://cdn.tailwindcss.com')
link(rel='shortcut icon' href='/images/front-images/feature_pic.png' type='image/x-icon')
header
  nav.p-3.border-gray-200.rounded.bg-cyan-100(class='dark:bg-gray-800 dark:border-gray-700')
    .container.flex.flex-wrap.items-center.justify-between.mx-auto
      a.flex.items-center(href='/')
        img.h-6.mr-3.rounded-full(src='../../images/front-images/feature_pic.png' class='sm:h-10' alt='Main_Logo')
        span.self-center.text-xl.font-semibold.whitespace-nowrap.animate-bounce(class='dark:text-white') Wellcome To Blogs
      button#hamburger.inline-flex.items-center.p-2.ml-3.text-sm.text-gray-500.rounded-lg(data-collapse-toggle='navbar-solid-bg' type='button' class='md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600' aria-controls='navbar-solid-bg' aria-expanded='false')
        span.sr-only Open main menu
        svg.w-6.h-6(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
          path(fill-rule='evenodd' d='M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z' clip-rule='evenodd')
      #navbar-solid-bg.hidden.w-full(class='md:block md:w-auto')
        ul.flex.flex-col.mt-4.rounded-lg.bg-gray-50(class='md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0 md:bg-transparent dark:bg-gray-800 md:dark:bg-transparent dark:border-gray-700')
          li
            a.block.py-2.pl-3.pr-4.text-white.bg-blue-700.rounded(href='/' class='md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-white dark:bg-blue-600 md:dark:bg-transparent' aria-current='page') Home
          li
            a.block.py-2.pl-3.my-2.pr-4.text-white.bg-cyan-700.rounded(href='/blogs/publish' class='lg:my-0 md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-white dark:bg-blue-600 md:dark:bg-transparent' aria-current='page') Publish your blog
          li
            a.block.py-2.pl-3.pr-4.text-gray-700.rounded(href='/admin' class='hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-400 md:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent') Admin Panel
main
  // title
  p.text-base.text-center.text-gray-900(class='mx-6 lg:text-4xl mt-[3rem] dark:text-white') #{title}
  br
  p.ml-6.text-gray-900(class='lg:text-xl dark:text-white') #{PublishDate}
  .mx-6(class='mt-[3.5rem] lg:mt-[5.5rem]')
    h2.bg-white.shadow-lg
    | #{content}
    script(src='../blogs/Full.Post.js')
