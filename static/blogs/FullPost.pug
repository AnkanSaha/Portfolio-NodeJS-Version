doctype html
meta(charset='UTF-8')
meta(http-equiv='X-UA-Compatible' content='IE=edge')
meta(name='viewport' content='width=device-width, initial-scale=1.0')
//- script(src='https://cdn.tailwindcss.com')
title #{title}
// tailwind css link
link(rel='stylesheet' href='../../css/base.css')
link(rel='stylesheet' href='../../css/tailwind.css')
link(rel='shortcut icon' href='/images/front-images/feature_pic.png' type='image/x-icon')
header
  nav.p-3.border-gray-200.rounded.bg-cyan-100(class='dark:bg-gray-800 dark:border-gray-700')
    .container.flex.flex-wrap.items-center.justify-between.mx-auto
      a.flex.items-center(href='/')
        img.h-6.mr-3.rounded-full(class='sm:h-10' src='../../images/front-images/feature_pic.png' alt='Main_Logo')
        span.self-center.text-xl.font-semibold.whitespace-nowrap.animate-bounce(class='dark:text-white') Wellcome To Blogs
      button#hamburger.inline-flex.items-center.p-2.ml-3.text-sm.text-gray-500.rounded-lg(class='md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600' data-collapse-toggle='navbar-solid-bg' type='button' aria-controls='navbar-solid-bg' aria-expanded='false')
        span.sr-only Open main menu
        svg.w-6.h-6(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
          path(fill-rule='evenodd' d='M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z' clip-rule='evenodd')
      #navbar-solid-bg.hidden.w-full(class='md:block md:w-auto')
        ul.flex.flex-col.mt-4.rounded-lg.bg-gray-50(class='md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0 md:bg-transparent dark:bg-gray-800 md:dark:bg-transparent dark:border-gray-700')
          li
            a.block.py-2.pl-3.pr-4.text-white.bg-blue-700.rounded(class='md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-white dark:bg-blue-600 md:dark:bg-transparent' href='/' aria-current='page') Home
          li
            a.block.py-2.pl-3.my-2.pr-4.text-white.bg-cyan-700.rounded(class='lg:my-0 md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-white dark:bg-blue-600 md:dark:bg-transparent' href='/blogs/publish' aria-current='page') Publish your blog
          li
            a.block.py-2.pl-3.pr-4.text-gray-700.rounded(class='hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-400 md:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent' href='/admin') Admin Panel
main
  // title
  p#Blogtitle.text-base.text-center.text-gray-900.mx-6(class='lg:text-4xl mt-[3rem] dark:text-white text-cyan-900') #{title}
  br
  p.ml-6.text-gray-900(class='lg:text-xl dark:text-white hover:text-red-700 cursor-pointer animate-pulse') #{PublishDate}
  .mx-6.mb-4(class='mt-[3.5rem] lg:mt-[5.5rem]')
    h2.bg-white.shadow-(class='first-letter:text-red-600 lg:first-letter:text-[2rem]') #{content}
    .fixed.right-6.bottom-6.group(data-dial-init='')
      #dialer.hidden.flex-col.items-center.mb-4.space-y-2
        button#sharebtn.flex.justify-center.items-center.text-gray-500.bg-white.rounded-full.border.border-gray-200.shadow-sm(type='button' data-tooltip-target='tooltip-share' data-tooltip-placement='left' class='w-[52px] h-[52px] hover:text-gray-900 dark:border-gray-600 dark:hover:text-white dark:text-gray-400 hover:bg-gray-50 dark:bg-gray-700 dark:hover:bg-gray-600 focus:ring-4 focus:ring-gray-300 focus:outline-none dark:focus:ring-gray-400')
          svg.-ml-px.w-6.h-6(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
            path(d='M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z')
          span.sr-only Share
        #tooltip-share.inline-block.absolute.invisible.z-10.py-2.px-3.w-auto.text-sm.font-medium.text-white.bg-gray-900.rounded-lg.shadow-sm.opacity-0.transition-opacity.duration-300.tooltip(role='tooltip' class='dark:bg-gray-700')
          | Share
          .tooltip-arrow(data-popper-arrow='')
        button#printbtn.flex.justify-center.items-center.text-gray-500.bg-white.rounded-full.border.border-gray-200.shadow-sm(type='button' data-tooltip-target='tooltip-print' data-tooltip-placement='left' class='w-[52px] h-[52px] hover:text-gray-900 dark:border-gray-600 dark:hover:text-white dark:text-gray-400 hover:bg-gray-50 dark:bg-gray-700 dark:hover:bg-gray-600 focus:ring-4 focus:ring-gray-300 focus:outline-none dark:focus:ring-gray-400')
          svg.w-6.h-6(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
            path(fill-rule='evenodd' d='M5 4v3H4a2 2 0 00-2 2v3a2 2 0 002 2h1v2a2 2 0 002 2h6a2 2 0 002-2v-2h1a2 2 0 002-2V9a2 2 0 00-2-2h-1V4a2 2 0 00-2-2H7a2 2 0 00-2 2zm8 0H7v3h6V4zm0 8H7v4h6v-4z' clip-rule='evenodd')
          span.sr-only Print
        #tooltip-print.inline-block.absolute.invisible.z-10.py-2.px-3.w-auto.text-sm.font-medium.text-white.bg-gray-900.rounded-lg.shadow-sm.opacity-0.transition-opacity.duration-300.tooltip(role='tooltip' class='dark:bg-gray-700')
          | Print
          .tooltip-arrow(data-popper-arrow='')
        #tooltip-download.inline-block.absolute.invisible.z-10.py-2.px-3.w-auto.text-sm.font-medium.text-white.bg-gray-900.rounded-lg.shadow-sm.opacity-0.transition-opacity.duration-300.tooltip(role='tooltip' class='dark:bg-gray-700')
          | Download
          .tooltip-arrow(data-popper-arrow='')
        #tooltip-copy.inline-block.absolute.invisible.z-10.py-2.px-3.w-auto.text-sm.font-medium.text-white.bg-gray-900.rounded-lg.shadow-sm.opacity-0.transition-opacity.duration-300.tooltip(role='tooltip' class='dark:bg-gray-700')
          | Copy
          .tooltip-arrow(data-popper-arrow='')
      button#dial.flex.justify-center.items-center.w-14.h-14.text-white.bg-red-700.rounded-full.animate-spin(type='button' data-dial-toggle='speed-dial-menu-default' aria-controls='speed-dial-menu-default' aria-expanded='false' class='hover:bg-blue-800 dark:bg-blue-600 dark:hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 focus:outline-none dark:focus:ring-blue-800')
        svg.w-8.h-8.transition-transform(aria-hidden='true' class='group-hover:rotate-45' fill='none' stroke='currentColor' viewbox='0 0 24 24' xmlns='http://www.w3.org/2000/svg')
          path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 6v6m0 0v6m0-6h6m-6 0H6')
        span.sr-only Open actions menu
  h1#Version(class='text-center mt-[2rem] opacity-25')
